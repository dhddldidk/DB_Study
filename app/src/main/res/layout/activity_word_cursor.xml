<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WordCursorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/insert_eng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="영어"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/insert_han"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="한글"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="insert"
            android:layout_height="wrap_content"
            android:onClick="mInsertOnClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/update_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="번호"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/update_eng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="영어"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/update_han"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="한글"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="update"
            android:layout_height="wrap_content"
            android:onClick="mUpdateOnClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/delete_num"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="삭제번호"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="delete"
            android:layout_height="wrap_content"
            android:onClick="mDeleteOnClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="번호"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="영어"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="한글"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@color/colorTitle"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listView_word"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>